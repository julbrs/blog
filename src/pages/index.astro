---
import LayoutBase from "@/layouts/LayoutBase.astro";
import profilePicture from "@/assets/profile.jpg"; // Replace with your image
import { Image } from "astro:assets";

// You can customize these links
const links = [
  {
    title: "Blog",
    url: "/blog",
    icon: "📝",
  },
  {
    title: "Outdoor Adventures",
    url: "/outdoor",
    icon: "🏔️",
  },
  // {
  //   title: "Outdoor Recipes",
  //   url: "/recipes",
  //   icon: "🍽️",
  // },
  {
    title: "GitHub Profile",
    url: "https://github.com/julbrs",
    icon: "💻",
  },
  {
    title: "BlueSky",
    url: "https://bsky.app/profile/sidoine.org",
    icon: "🦋",
  },
];

// Profile information
const profile = {
  name: "Julien Bras",
  bio: "Software Engineer ☁️ | Writer 📝 | Outdoor Enthusiast 🏔️",
};
---

<LayoutBase>
  <main
    class="min-h-screen bg-gradient-to-b from-gray-100 to-white text-gray-800 flex flex-col items-center py-12 px-4"
  >
    <div class="w-full max-w-md">
      <!-- Profile Section -->
      <div class="flex flex-col items-center mb-8">
        <Image
          src={profilePicture}
          alt={profile.name}
          class="w-24 h-24 rounded-full border border-gray-200 shadow-md mb-4"
        />
        <h1 class="text-2xl font-bold text-center">{profile.name}</h1>
        <p class="text-gray-600 text-center mt-2">{profile.bio}</p>
      </div>

      <!-- Links Section -->
      <div class="space-y-3 w-full">
        {
          links.map((link) => (
            <a
              href={link.url}
              target={link.url.startsWith("http") ? "_blank" : "_self"}
              rel={link.url.startsWith("http") ? "noopener noreferrer" : ""}
              class="flex items-center p-4 rounded-lg bg-white hover:bg-gray-50 transition-all duration-300 shadow-sm border border-gray-200 w-full"
            >
              <span class="text-xl mr-3">{link.icon}</span>
              <span class="font-medium">{link.title}</span>
            </a>
          ))
        }
      </div>

      <!-- Footer -->
      <footer class="mt-12 text-center text-gray-500 text-sm">
        <p>© {new Date().getFullYear()} {profile.name}</p>
      </footer>
    </div>
  </main>
</LayoutBase>
