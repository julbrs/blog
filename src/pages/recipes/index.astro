---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Layout from "@/layouts/Layout.astro";

import defaultImage from "@/assets/default-recipe.png";
const posts = (await getCollection("recipe")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Recettes" description="Explorez nos dÃ©licieuses recettes de cuisine.">
  <section>
    <ul>
      {
        posts.map((post) => (
          <li>
            <a href={`/recipes/${post.id}/`}>
              <Image width={720} height={360} src={post.data.heroImage || defaultImage} alt="" />

              <h4 class="title">{post.data.title}</h4>
              <p class="date">{/* <FormattedDate date={post.data.pubDate} /> */}</p>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</Layout>
