---
interface Props {
  date: Date;
}

const { date } = Astro.props;
const options: Intl.DateTimeFormatOptions = {
  year: "numeric",
  month: "long",
  day: "numeric",
};

const formattedDate = new Date(date).toLocaleDateString("en-US", options);
---

<time datetime={date.toISOString()} class="font-sans text-base text-emerald-700">
  {formattedDate}
</time>
