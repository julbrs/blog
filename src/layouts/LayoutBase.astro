---
import "@/styles/global.css";

interface Props {
  title?: string;
}

const { title = "Sidoine.org" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Goat Counter, build mode only -->
    {
      import.meta.env.MODE === "production" && (
        <script
          is:inline
          data-goatcounter="https://sidoine.goatcounter.com/count"
          async
          src="//gc.zgo.at/count.js"
        />
      )
    }
  </head>
  <body>
    <slot />
  </body>
</html>
